# Including common
if [[ -z "$HTAN_INCLUDED_TOOLS" ]]; then
  {
    if [[ "${0##*/}" != "nginx" ]]; then
      printf "Including the common …"
    fi
    if source "$(cd $(dirname $0) && pwd)/../tools/common"; then
      if [[ "${0##*/}" != "nginx" ]]; then
        OK
      fi
    fi
  } || {
    echo ""
    echo -e "\033[1;31m$(gettext "Failed to include the common.")\033[0m"
    exit 1
  }
fi

# Including tools
IncludeTool package service config

InstallNginx()
{
  # http://nginx.org/ru/docs/http/ngx_http_core_module.html#location

  # tested version
  local tested
  if [[ "$HTAN_TESTED" == true ]]; then
    tested="-version=1.6.2"
  fi
  # // --

  Line =
  Message "$(gettext "# Installing and configuring %s.")" "Nginx" -s="$DEF_STYLE_HEADER"
  Line =

  PackageInstall nginx -confirm=false -title="Nginx" $tested

  Line

  ServiceStop nginx

  # protecting log files
  sudo chmod 750 /etc/nginx/
  sudo chgrp adm /var/log/nginx

  # delete default site
  if [[ -f /etc/nginx/sites-enabled/default ]]; then
    sudo rm /etc/nginx/sites-enabled/default
  fi

  Line
  Message "$(gettext "Done.")"
}

InstallNginx